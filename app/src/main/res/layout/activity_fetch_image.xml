<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FetchImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/colorFromAPI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="color from API"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgV_colorObject"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_gravity="center_horizontal|center_vertical"
            app:srcCompat="@mipmap/ic_launcher" />

        <WebView
            android:id="@+id/webV_APIshape"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_gravity="center_horizontal|center_vertical">

        </WebView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerV_colors_grid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="6dp"
        tools:itemCount="8"
        tools:listitem="@layout/grid_view_color_item"
        />

    <ListView
        android:id="@+id/listView_colors"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ListView>

</LinearLayout>